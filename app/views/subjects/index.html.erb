<h1>Listing subjects</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% for subject in @subjects %>
  <tr>
    <td><%=h subject.name %></td>
    <td><%= link_to 'Show', student_subject_path(@student, subject) %></td>
    <td><%= link_to 'Edit', edit_student_subject_path(@student, subject) %></td>
    <td><%= link_to 'Destroy', student_subject_path(@student, subject), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New subject', new_student_subject_path(@student) %>
